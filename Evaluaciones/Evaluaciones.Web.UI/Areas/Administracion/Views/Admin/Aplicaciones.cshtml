@model Evaluaciones.Web.UI.Areas.Administracion.Models.Aplicacion

@{
    ViewBag.Title = "Aplicaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="panel panel-visible">
        <div class="panel-heading">
            <div class="panel-title hidden-xs">
                <span class="glyphicon glyphicon-tasks"></span>Buscar y Filtrar
            </div>
        </div>
        <div class="panel-body pn">
            <table class="table table-striped table-hover" id="gridView" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Orden</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Aplicaciones</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            @Html.Hidden("aplicacionId")

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-6">
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Nombre, new { @for = "Nombre", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Nombre, new { @class = "gui-input", @id = "nombre", @placeholder = "Nombre", @maxLength = "60" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Clave, new { @for = "clave", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Clave, new { @class = "gui-input", @id = "clave", @placeholder = "Clave", @maxLength = "50" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Fa_Icon, new { @for = "FaIcon", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Fa_Icon, new { @class = "gui-input", @id = "faIcon", @placeholder = "Fa_Icon", @maxLength = "20" })
                                </label>
                            </div>
                        </div>
                        <div class="section row">
                            <div class="col-md-12">
                                @Html.LabelFor(x => x.Orden, new { @for = "orden", @class = "field-label" })
                                <label class="field select">
                                    @Html.TextBoxFor(x => x.Orden, new { @class = "gui-input", @id = "orden", @placeholder = "Orden", @maxLength = "2", @onlyNumbers = true })
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-sm-12">
                            <fieldset>
                                <legend>Pérfil</legend>
                                <div class="option-group field section">
                                    @foreach (SelectListItem perfil in Model.Perfiles)
                                    {
                                        <label class="option block mt15">
                                            <input type="checkbox" name="SelectedPerfil" value="@perfil.Value">
                                            <span class="checkbox"></span>@perfil.Text
                                        </label>
                                    }
                                </div>                                
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/aplicaciones")