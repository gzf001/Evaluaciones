@model Evaluaciones.Web.UI.Areas.Administracion.Models.Rol

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div id="form" class="admin-form">
        <div class="panel">
            <div class="panel-heading">
                <span class="panel-title">Administración de roles</span>
            </div>
            <div class="form-horizontal">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.AmbitoCodigo, new { @for = "ambito", @class = "col-sm-4 control-label" })
                        <div class="col-md-3">
                            <div class="bs-component">
                                @Html.DropDownListFor(x => x.AmbitoCodigo, Evaluaciones.Ambito.Ambitos, new { @id = "ambito", @class = "form-control" })
                                <i class="arrow"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-visible">
        <div class="panel-heading">
            <div class="panel-title hidden-xs">
                <span class="glyphicon glyphicon-tasks"></span>Buscar y Filtrar
            </div>
        </div>
        <div class="panel-body pn">
            <table class="table table-striped table-hover" id="gridView" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Clave</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div id="modal-form" class="popup-basic admin-form mfp-with-anim mfp-hide mw800">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">Roles</span>
        </div>
        <form id="formModal" method="post">

            @Html.AntiForgeryToken()

            @Html.Hidden("rolId")

            <div class="panel-body">
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.AmbitoCodigo, new { @for = "ambitoCodigo", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.AmbitoCodigo, new { @class = "form-control", @id = "ambitoCodigo", @disabled = "false" })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Nombre, new { @for = "nombre", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Nombre, new { @class = "gui-input", @id = "nombre", @placeholder = "Nombre", @maxLength = "60" })
                        </label>
                    </div>
                </div>
                <div class="section row">
                    <div class="col-md-12">
                        @Html.LabelFor(x => x.Clave, new { @for = "clave", @class = "field-label" })
                        <label class="field select">
                            @Html.TextBoxFor(x => x.Clave, new { @class = "gui-input", @id = "clave", @placeholder = "Clave", @maxLength = "50" })
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button" id="cancel" class="button btn-dark">Cancelar</button>
                <button type="submit" id="save" class="button btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>

@Scripts.Render("~/js/rol")